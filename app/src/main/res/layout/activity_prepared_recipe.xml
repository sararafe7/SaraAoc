<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PreparedRecipeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/reNamePre"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amiri"
                android:text="Recipe Name: "
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/theAmOfDinersPre"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amiri"
                android:text="The Amount of Diners:  "
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tiForPrePre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amiri"
                    android:text="Time to Prepare: \n"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tiToCookPre"
                    android:layout_width="127dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/amiri"
                    android:text="Time to Cook: \n"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>
            <TextView
                android:id="@+id/ingredientsPre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amiri"
                android:text="Ingredients: "
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/recipePre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amiri"
                android:text="Directions: \n"
                android:textSize="18sp" />

            <Button
                android:id="@+id/backToMealsBtnPre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:fontFamily="@font/amiri"
                android:text="Back to Meals"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>



