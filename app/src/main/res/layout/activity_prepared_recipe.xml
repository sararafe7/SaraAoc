<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PreparedRecipeActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="53dp" />

    <TextView
        android:id="@+id/reNamePre"
        android:layout_width="181dp"
        android:layout_height="30dp"
        android:text="Recipe Name: " />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/theAmOfDinersPre"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="The Amount of Diners:  " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tiForPrePre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time to Prepare: \n" />

        <Space
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tiToCookPre"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:text="Time to Cook: \n" />

        <Space
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/ingredientsPre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients: " />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/recipePre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Directions: \n" />

    <Button
        android:id="@+id/backToMealsBtnPre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="Back to Meals" />

</LinearLayout>



